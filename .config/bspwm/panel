#! /bin/sh

source $(dirname $0)/config
    
if xdo id -a "$WM_NAME" > /dev/null ; then
    printf "%s\n" "The panel is already running." >&2
    exit 1
fi

trap 'trap - TERM; kill 0' INT TERM QUIT EXIT

[ -e "$PANEL_FIFO" ] && rm "$PANEL_FIFO"
mkfifo "$PANEL_FIFO"

bspc config top_padding $HEIGHT
bspc subscribe |\
    grep -oE "[Mm][^TM]*[TML]" --line-buffered |\
    while read line; do echo W$line; done > "$PANEL_FIFO" &

# Top left
{
    getName() {
        local ic=$(pIcon ${BG} ${GENTOO})
        local cmd=$(uname -n)
        local clr=$(pText ${BG} "${cmd}")
        echo " ${ic} ${clr}"
    }

    panelMusic() {
        local prev=$(pAction $WHITE2 $BG "mpc prev &>/dev/null" ${CPREV})
        local pause=$(pAction $WHITE2 $BG "mpc pause &>/dev/null" ${CPAUS})
        local play=$(pAction $WHITE2 $BG "mpc play &>/dev/null" ${CPLAY})
        local next=$(pAction $WHITE2 $BG "mpc next &>/dev/null" ${CNEXT})
        echo "${prev}${pause}${play}${next}"
    }

    music() {
        local icon=$(pIcon ${YELLOW} ${CSOUND})
        local status=$(mpc current)
        if [ "$status" ] ; then
            local artist=$(mpc -f %artist% current)
            local musicname=$(mpc -f %title% current)
            local clr1=$(pText ${BG} "${artist:0:20}")
            local clr2=$(pText ${BG} "${musicname:0:20}")
            echo "${icon} ${clr1} ${clr2}"
        else
            echo "${icon} %{F${RED}}No Sound%{F-}"
        fi
    }

    volume() {
        local icon=$(pIcon ${YELLOW} ${CVOLUME})
        local cmd=$(mpc volume | awk '{print $2}' | cut -d '%' -f 1)
        local cmd+=" %"
        local clr=$(pText ${BLACK2} "${cmd}")
        local plus=$(pAction $WHITE2 $BG "mpc volume +4 &>/dev/null" ${VPLUS})
        local minus=$(pAction $WHITE2 $BG "mpc volume -3 &>/dev/null" ${VMINUS})
        echo "${icon} ${clr} ${plus}${minus}"
    }

    while :; do
        echo "T$(getName) $(panelMusic) $(music) $(volume)"
        sleep 5
    done

} > "$PANEL_FIFO" &

# Top Right
{
    getDay() {
        local icon=$(pIcon ${YELLOW} ${CTIME})
        local cmd=$(date '+%A %d %b')
        local clr=$(pText ${BLACK2} "${cmd}")
        echo "${icon} ${clr}"
    }

    clock() {
        local icon=$(pIcon ${YELLOW} ${CCLOCK})
        local cmd=$(date +%H:%M)
        local clr=$(pText ${BG} "${cmd}")
        echo "${icon} ${clr}"
    }

    # Need change here !
    mail() {
        local gmaildir=/home/<user>/mails/<user>/new
        local prog=$(pAction $WHITE2 $BG "urxvtc -e mutt" ${CMAIL})
        local icon=$(pIcon ${YELLOW} ${CMAIL})
        local count=0
        if [[ ! -n $(ls "${gmaildir}") ]]; then
            count=0
        else
            count=$(ls -1 "${gmaildir}" | wc -l)
        fi
        echo "${prog} ${count}"
    }

    net() {
        local _GETIWL=$(/sbin/iwgetid -r)
        local _GETETH=$(ip a | grep "state UP" | awk '{ORS=""}{print $2}' | cut -d ':' -f 1)
        local _status=${_GETIWL:-$_GETETH}
        local _status2=${_status:-Down}
        local icon=$(pIcon ${YELLOW} ${CNET})

        echo "${icon} $(pText ${BG} ${_status2})"
    } 

    energy() {
        local ac=/sys/class/power_supply/AC/online
        local bat=/sys/class/power_supply/BAT0/present
        local icon=""
        local batCap=""
        if [[ -e $bat ]] && [[ $(cat $ac) -lt 1 ]]; then
            batCap="$(cat ${bat%/*}/capacity)"
            [ $batCap -gt 90 ] && icon=$BAT100
            [ $batCap -gt 70 ] && [ $batCap -lt 90 ] && icon=$BAT70
            [ $batCap -gt 50 ] && [ $batCap -lt 70 ] && icon=$BAT50
            [ $batCap -gt 30 ] && [ $batCap -lt 50 ] && icon=$BAT30
            [ $batCap -gt 15 ] && [ $batCap -lt 30 ] && icon=$BAT15
            [ $batCap -lt 7 ] && icon=$BAT7
        elif [[ -n $(cat $ac) ]]; then
            batCap="AC"
            icon=$CAC
        else
            batCap="wttf"
        fi
        echo "$(pIcon ${YELLOW} $icon) $(pText ${BLACK} ${batCap})"
    }

    ram() {
        local icon=$(pIcon ${YELLOW} ${CRAM})
        local cmd=$(free -m | grep Mem | awk '{print $3}')
        cmd+=" Mb"
        local clr=$(pText ${BG} "${cmd}")
        echo "${icon} ${clr}"
    }

    # Cpu List Load, number of Process and actual MHz frequency.
    cpu() {
        local icon=$(pIcon ${YELLOW} ${CCPU})
        local cmd="$(cat /proc/loadavg | awk '{print $1}')"
        local cmd+=" $(cat /proc/loadavg | awk '{print $4}')"
        local cmd+=" $(cat /proc/cpuinfo| grep MHz | awk '{ORS=" "}{print $4}' | sed -e 's/.000//g' | cut -f 1)"

        local clr=$(pText ${BLACK2} "${cmd}")
        echo "${icon} ${clr}"
    }

    # On archlinux, change cmd=$(pacman -Ql | wc -l), or remove it complety.
    package() {
        local icon=$(pIcon ${YELLOW} ${CPACK})
        local cmd=$(equery list "*" | wc -l)
        local clr=$(pText ${BLACK2} "${cmd}")
        echo "${icon} ${clr}"
    }

    while :; do
        echo "S$(package) $(cpu) $(ram) $(energy) $(net) $(mail) $(clock) $(getDay)"
        sleep 5
    done

} > "$PANEL_FIFO" &

$(dirname $0)/panel_bar < "$PANEL_FIFO" | lemonbar \
    -a 32 \
    -n "$WM_NAME" \
    -g x$HEIGHT \
    -f "$FONT" \
    -f "$FONT_ICON" \
    -F "$BG" \
    -B "$FG" | sh | while read line; do eval "$line"; done &

wid=$(xdo id -a "$WM_NAME")
tries_left=20

while [ -z "$wid" -a "$tries_left" -gt 0 ] ; do
	sleep 0.05
	wid=$(xdo id -a "$WM_NAME")
	tries_left=$((tries_left - 1))
done

[ -n "$wid" ] && xdo above -t "$(xdo id -N Bspwm -n root | sort | head -n 1)" "$wid"

wait
