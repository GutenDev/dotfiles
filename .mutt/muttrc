ignore *
unignore from: to: cc: date: subject:
hdr_order from: to: cc: date: subject:

set copy=no

# Mailbox
set mbox_type=Maildir
set folder="~/.mails"
set spoolfile="+Gmail/INBOX"
set editor="vim -c 'set syntax=mail ft=mail enc=utf-8'"

# Personal
set hidden_host=yes

# Sending
set envelope_from=yes
set sendmail_wait = -1
set send_charset="utf-8"

# Basic
set timeout=3
set wait_key=no
set delete
set pipe_decode
set mailcap_path="~/.mutt/mailcap"
set use_domain=no
set user_agent=no
set sleep_time=0
set menu_scroll

# Composing
set edit_headers
set fast_reply
set askcc

# HTML Message
auto_view text/html
alternative_order text/plain text/enriched text/html

# Printint

# PGP
set pgp_use_gpg_agent = yes
set pgp_sign_as = 0xlong_key_id_forsign
set pgp_self_encrypt_as = 0xlong_key_id_forencrypt
set pgp_timeout = 3600
set crypt_autosign = yes
set crypt_replysignencrypted = yes
set crypt_verify_sig = yes
# copy file from /usr/share/doc/mutt/samples/gpg.rc
source ~/.mutt/gpg.rc

# Status Bar
set status_chars=" *%A"
set status_format="───[ Folder: %f ]───[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p postponed )?───"

# Index view
set date_format="%d-%m-%Y %H:%M"
set index_format="[%Z] %D %-20.20F %s"
# i use other program for check mail
set mail_check = 0
set sort=threads
set sort_aux=reverse-last-date-received
set uncollapse_jump
set strict_threads
set thorough_search

# Pager View
set pager_index_lines = 10
set pager_context = 3
set pager_stop

set forward_format = "Fwd: %s"
set forward_quote
set reply_to
set reverse_name
set include
set tilde
set mime_forward = ask-no

unset help
unset confirmappend
unset mark_old
unset markers
unset record
unset sort_re
unset wait_key

# menu for encrypt or not mail
bind compose p pgp-menu

source ~/.mutt/colors
source ~/.mutt/mailboxes

folder-hook Gmail/*  source ~/.mutt/accounts/gmail
folder-hook Sheet/*     source ~/.mutt/accounts/sheet
folder-hook Work/*     source ~/.mutt/accounts/work

source ~/.mutt/accounts/gmail # default account
